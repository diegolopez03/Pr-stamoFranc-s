<h1 class="mt-3">Tabla de retorno del Préstamo</h1>

{{#if cuotas}}
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Mes</th>
            <th scope="col">Capital</th>
            <th scope="col">Interés</th>
            <th scope="col">Cuota</th>
            <th scope="col">Deuda pendiente</th>
        </tr>
    </thead>
    <tbody>
        {{#each cuotas}}
        <tr>
            <th scope="row">{{i}}</th>
            <th scope="row">{{capitalSiguiente}}</th>
            <th scope="row">{{interes}}</th>
            <th scope="row">{{cuota}}</th>
            <th scope="row">{{capital}}</th>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/if}}